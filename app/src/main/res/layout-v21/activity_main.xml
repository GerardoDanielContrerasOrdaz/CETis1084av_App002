<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="mx.edu.cetis108.cetis1084av_app002.MainActivity"
    android:weightSum="1"
    android:background="@android:color/background_light">

    <EditText
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:text="@string/editText1"
        android:ems="10"
        android:layout_marginTop="2dp"
        android:id="@+id/editText1"
        android:inputType="number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="@string/editText2"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:id="@+id/editText2" />

    <TextView
        android:text="@string/txtView"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/txtView"
        android:textSize="15sp"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true"
        android:textColor="?android:attr/colorMultiSelectHighlight"
        android:background="?attr/colorBackgroundFloating" />

    <Button
        android:text="@string/btnSuma"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/btnSuma"
        android:textColor="@color/common_plus_signin_btn_text_light_pressed"
        android:textSize="16sp"
        android:textStyle="normal|bold|italic"
        android:backgroundTint="?attr/colorButtonNormal" />

    <Button
        android:text="@string/btnResta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/btnResta"
        android:textSize="16sp"
        android:layout_weight="0.04"
        android:textStyle="normal|bold|italic"
        android:backgroundTint="?attr/colorButtonNormal" />

    <Button
        android:text="@string/btnMult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/btnMult"
        android:textSize="16sp"
        android:layout_weight="0.03"
        android:textStyle="normal|bold|italic"
        android:backgroundTint="?attr/colorButtonNormal" />

    <Button
        android:text="@string/btnDiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/btnDiv"
        android:textSize="16sp"
        android:layout_weight="0.04"
        android:textStyle="normal|bold|italic"
        android:backgroundTint="?attr/colorButtonNormal" />
</LinearLayout>
